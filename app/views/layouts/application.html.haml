!!! XML
!!!
%html
  %head
    %title My application
    = stylesheet_link_tag 'compiled/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie', :media => 'screen, projection'
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" }
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js" }
    = javascript_include_tag :all
    = csrf_meta_tag
  %body
    #container
      #header.span-24 HEADER
      #content.span-16= yield
      #sidebar.span-8.last
        SIDEBAR
        = render 'shared/search'
      #footer.span-24 FOOTER
