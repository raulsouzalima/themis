- content_for :title do
  = ": #{@section.name}" unless @section.nil?

= render :layout => "layouts/public" do
  - if defined?(title)
    %h2= title

  .posts
    - posts.each do |post|
      .post
        .title= link_to post.title, section_post_path(post.section, post)
        .author= post.author.name
        .date= post.created_at
        .body= raw post.body.to_html
        .comments
          = link_to("Add comment", section_post_path(post.section, post, :anchor => "disqus_thread"))
          = raw disqus_comment_counts

  .paginate
    = will_paginate posts
