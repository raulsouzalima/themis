= render :layout => "layouts/public", :locals => {:title => title} do
  - if defined?(title)
    %h2= title

  .posts
    - posts.each do |post|
      .post
        %h3.title= link_to post.title, section_post_path(post.section, post)
        .author_image=raw gravatar_for post.author
        .author= post.author.name
        .date= post.created_at
        .body= raw post.body.to_html
        .tags 
          - post.tags.map do |tag| 
            = link_to tag.name, tags_path(tag.name)
        .comments
          = link_to("Add comment", section_post_path(post.section, post, :anchor => "disqus_thread"))
          = raw disqus_comment_counts

  .paginate
    = will_paginate posts
