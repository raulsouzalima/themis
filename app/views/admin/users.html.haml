%h2= User.human_name.pluralize

.links
  = link_to "#{t("new")} #{User.human_name.downcase}", new_user_path

.users
  %table
    %thead
      %tr
        %th= User.human_attribute_name(:name)
        %th= User.human_attribute_name(:email)
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= link_to t("edit"), edit_user_path(user), :class => :edit
