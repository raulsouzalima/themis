= render :layout => "layouts/admin" do
  %h2= Section.model_name.human.pluralize

  .links
    = link_to "#{t("new")} #{Section.model_name.human.downcase}", new_section_path

  .sections
    %table
      %thead
        %tr
          %th= Section.human_attribute_name(:name)
          %th
          %th
      %tbody
        - @sections.each do |section|
          %tr{:id => dom_id(section)}
            %td= section.name
            %td= link_to t("edit"), edit_section_path(section), :class => :edit
            %td= link_to t("destroy"), section, :remote => true, :confirm => 'Are you sure?', :method => :delete, :class => :destroy
